@model IEnumerable<SistemaMundoNovo.Models.Livro>

@{
    ViewBag.Title = "Busca";
}

<h2>Busca</h2>

<p>
    @Html.ActionLink("Cadastrar Novo Livro", "Create")
</p>
<table class="table">
    <tr>
        @* <th>
            @Html.DisplayNameFor(model => model._Bibliotecario.Nome)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.autor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ano)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.categoria)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @* <td>
            @Html.DisplayFor(modelItem => item._Bibliotecario.Nome)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.autor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ano)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.categoria.Nome)
        </td>
        <td>
            @Html.ActionLink("Emprestar", "Create", "Emprestimos", new { id = item.id }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Detalhes", "Details", new { id = item.id }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Excluir", "Delete", new { id = item.id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
