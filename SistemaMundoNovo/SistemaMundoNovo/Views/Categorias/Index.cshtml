@model IEnumerable<SistemaMundoNovo.Models.Categoria>

@{
    ViewBag.Title = "Cadastro Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Categorias</h2>

<p>
    @Html.ActionLink("Cadastrar Categoria", "Create", "Categorias", new { @class = "btn btn-primary" })
</p>
<hr /><hr />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", "Categorias", new { id=item.CategoriaId }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Detalhes", "Details", "Categorias", new { id=item.CategoriaId }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Excluir", "Delete","Categorias", new { id=item.CategoriaId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
