<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @*@if (HttpContext.Current.Session["GuidId"] == null)
        {
            Response.Redirect("~/Bibliotecarios/Login");
        }*@
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (HttpContext.Current.Session["GuidId"] != null)
                    {
                        <li>
                            @Html.ActionLink("Listar Livros", "Index", "Livros", null, new { @class = "nav-link", @style = "color:white;" })
                        </li>
                        <li>
                            @Html.ActionLink("Cadastrar livro", "Create", "Livros", null, new { @class = "nav-link", @style = "color:white;" })
                        </li>
                        <li>
                            @Html.ActionLink("Usuários", "Index", "Bibliotecarios", null, new { @class = "nav-link", @style = "color:white;" })
                        </li>
                        <li>
                            @Html.ActionLink("Empréstimos", "Index", "Emprestimos", null, new { @class = "nav-link", @style = "color:white;" })
                        </li>
                    }
                </ul>

                <div class="form-inline my-2 my-lg-0">
                    @Html.ActionLink("Sair", "Sair", "Bibliotecarios", null, new { @class = "nav-link", @style = "color:white;" })
                </div>
            </div>
</div>
          </div>

    <div class="container" style="margin-top:50px;margin-bottom:50px">
        @RenderBody()


        <hr />
        <footer style="text-align:center">
            <p>
                &copy; @DateTime.Now.Year - Desenvolvido por Amália Cristina e Gabriela Bojarski
            </p>
        </footer>
    </div>
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
</body>
</html>
